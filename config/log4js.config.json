{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "dateFile",
      "filename": "logs/",
      "pattern": "yyyyMMdd.log",
      "alwaysIncludePattern": true
    },
    {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "logs/log_error.log",
        "maxLogSize": 20480,
        "backups": 30
      }
    }
  ],
  "replaceConsole": true
}