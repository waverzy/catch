<div class="main-page table-responsive" id="login">
    <div class="form-signin">
        <div class="alert alert-danger" role="alert" id="warning" style="display: none"></div>
        <h2 class="form-signin-heading">请登录</h2>
        <label for="inputUsername" class="sr-only">Username</label>
        <input id="username" class="form-control" placeholder="用户名" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" placeholder="密码" required>
        <button class="btn btn-lg btn-primary btn-block" id="btn-login">登录</button>
    </div>
</div>