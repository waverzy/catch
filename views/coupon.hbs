<div class="main-page table-responsive" id="coupon">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal" id="sel-form">
                <div class="form-group">
                    <select class="form-control" id="src-sel">
                        {{#each corplist}}
                            <option value="{{code}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" id="dest-sel">
                        {{#each corplist}}
                            <option value="{{code}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" id="discount-input" placeholder="优惠内容">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="num-input" placeholder="数量，10">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="len-input" placeholder="优惠码长度，6，<=9">
                </div>
                <button type="button" class="btn btn-primary" id="generate">&nbsp;&nbsp;&nbsp;&nbsp;生  成&nbsp;&nbsp;&nbsp;&nbsp;</button>
            </div>
        </div>
    </div>

    <div class="panel panel-default panel-primary" id="results" style="display: none">
        <div class="panel-heading">生成结果</div>
        <table class="table">
            <thead>
            <tr>
                <th class="col-md-1"></th>
                <th>源机构</th>
                <th>目标机构</th>
                <th>优惠码</th>
                <th>索引号</th>
                <th>优惠内容</th>
            </tr>
            </thead>
            <tbody id="coupons">
            <!--{{#each couponResults}}
                <tr>
                    <th id="sth{{add @index 1}}1">{{@index}}</th>
                    <th id="sth{{add @index 1}}2">{{src}}</th>
                    <th id="sth{{add @index 1}}3">{{dest}}</th>
                    <th id="sth{{add @index 1}}4">{{couponcode}}</th>
                    <th id="sth{{add @index 1}}5">{{couponno}}</th>
                </tr>
            {{/each}}-->
            </tbody>
        </table>
    </div>

    <div class="panel panel-default panel-primary">
        <div class="panel-heading">使用统计</div>
        <table class="table">
            <thead>
            <tr>
                <th class="col-md-1"></th>
                <th>源机构</th>
                <th>目标机构</th>
                <th>总数</th>
                <th>已使用</th>
            </tr>
            </thead>
            <tbody>
            {{#each stats}}
                <tr>
                    <th>{{@index}}</th>
                    <th>{{src}}</th>
                    <th>{{dest}}</th>
                    <th>{{totalnum}}</th>
                    <th>{{usednum}}</th>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

</div>