<div class="main-page table-responsive" id="generate">
    <div class="panel panel-default">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">手机号</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ipt-mobile" placeholder="客户手机号" maxlength="11">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">验证码</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="ipt-msg" placeholder="短信验证码">
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-default" id="btn-msg">获取短信验证码</button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">目标机构</label>
                <div class="col-sm-10">
                    <select class="form-control" id="dest-sel">
                        {{#each corplist}}
                            <option value="{{dest}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" id="btn-generate">生成</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">结果</h4>
                </div>
                <div class="modal-body">
                    <h1 id="success-info" style="display: none">优惠码发送成功！</h1>
                    <div class="alert alert-danger" role="alert" id="fail-info" style="display: none">失败！</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">确定</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>