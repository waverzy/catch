<div class="main-page table-responsive" id="user">
    <div class="panel panel-default panel-primary">
        <div class="panel-heading">
            <div class="user-title">用户管理</div>
            <div class="group-btn">
            <button type="button" class="btn btn-default btn-info btn-edit">
                修改
            </button>
            <button type="button" class="btn btn-default btn-info btn-insert">新增</button>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th class="col-md-1"></th>
                <th>用户名</th>
                <th>密码</th>
                <th>机构</th>
                <th>权限</th>
            </tr>
            </thead>
            <tbody>
            {{#each users}}
                <tr>
                    <th>
                        <input type="radio" name="optionsRadios" id="sth{{add @index 1}}0" value="{{name}}">
                    </th>
                    <th id="sth{{add @index 1}}1">{{name}}</th>
                    <th id="sth{{add @index 1}}2">{{password}}</th>
                    <th id="sth{{add @index 1}}3">{{corp}}</th>
                    <th id="sth{{add @index 1}}4">{{auth}}</th>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">编辑</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group" id="form-name" style="display: none">
                            <label class="col-sm-4 control-label">用户名</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="new-name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">密码</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="new-password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">机构</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="new-corp">
                                    {{#each corps}}
                                        <option value="{{this.code}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">权限</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="new-auth">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary btn-save">保存</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>